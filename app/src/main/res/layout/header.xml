<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_96dp"
    android:paddingStart="@dimen/padding_24dp"
    android:paddingEnd="@dimen/padding_24dp">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:fontFamily="@font/font_family_nanum_myeongjo"
        android:includeFontPadding="false"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_24dp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintBottom_toTopOf="@id/text_clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextClock
        android:id="@+id/text_clock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_family_nanum_myeongjo"
        android:format12Hour="@string/pattern_format_12_hour_000"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@color/subtitle"
        android:textSize="@dimen/text_size_14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="10월 11일 월요일" />

</androidx.constraintlayout.widget.ConstraintLayout>