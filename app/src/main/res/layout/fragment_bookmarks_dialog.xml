<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/surface"
    android:paddingBottom="@dimen/padding_8dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_64dp"
        android:background="@drawable/rounded_top_corners"
        android:backgroundTint="@color/surface"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/padding_24dp"
        android:paddingStart="@dimen/padding_24dp"
        android:text="@string/bookmarks"
        android:textSize="@dimen/text_size_20dp"
        android:textStyle="bold"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_280dp"
        android:layout_below="@+id/text_view_title">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:elevation="@dimen/elevation_8dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            tools:ignore="UseCompoundDrawables"
            tools:visibility="visible">

            <ImageView
                android:layout_width="@dimen/width_32dp"
                android:layout_height="@dimen/height_32dp"
                app:srcCompat="@drawable/ic_nothing_found_96px"
                app:tint="@color/nothing_found"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/surface"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/no_bookmarks"
                android:textColor="@color/nothing_found"
                android:textSize="@dimen/text_size_16dp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>