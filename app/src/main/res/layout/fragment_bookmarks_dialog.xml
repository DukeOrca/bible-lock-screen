<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/surface"
    android:paddingBottom="@dimen/padding_8dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_64dp"
        android:background="@drawable/rounded_top_corners"
        android:backgroundTint="@color/surface"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/padding_24dp"
        android:paddingStart="@dimen/padding_24dp"
        android:text="@string/bookmarks"
        android:textSize="@dimen/text_size_20dp"
        android:textStyle="bold"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_280dp"
        android:layout_below="@+id/text_view_title">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/layout_animation" />

        <TextView
            android:id="@+id/text_view_no_bookmarks"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_56dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/surface"
            android:gravity="center"
            android:text="@string/no_bookmarks"
            android:textColor="@color/medium_emphasis"
            android:textSize="@dimen/text_size_16dp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

</RelativeLayout>