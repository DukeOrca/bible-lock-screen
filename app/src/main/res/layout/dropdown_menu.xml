<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clickable="false"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false"
    android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables">

    <com.wind.orca.pe.rollingtextview.RollingTextView
        android:id="@+id/rolling_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:layout_marginStart="@dimen/margin_12dp"
        android:clickable="false"
        android:fontFamily="@font/font_family_nanum_myeongjo"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_4dp"
        android:paddingTop="@dimen/padding_4dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14dp"
        android:textStyle="bold"
        tools:text="150"
        tools:textColor="@color/text"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/width_32dp"
        android:layout_height="@dimen/height_32dp"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_round_arrow_drop_down_24"
        app:tint="@color/icon"
        tools:ignore="ContentDescription" />

</LinearLayout>